{
	"name": "pocket-money",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "wrangler pages dev .svelte-kit/cloudflare",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"db:migrate": "wrangler d1 execute pocket-money-db --local --file=./migrations/0001_initial.sql",
		"db:migrate:prod": "wrangler d1 execute pocket-money-db --file=./migrations/0001_initial.sql",
		"screenshots": "npx tsx scripts/capture-screenshots.ts",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241205.0",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-cloudflare": "^7.2.5",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@testing-library/svelte": "^5.3.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"postcss": "^8.4.49",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.53.0",
		"vite": "^6.4.1",
		"vitest": "^4.0.17",
		"wrangler": "^4.59.2"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"bcryptjs": "^3.0.3",
		"chart.js": "^4.4.7",
		"chartjs-adapter-date-fns": "^3.0.0",
		"date-fns": "^4.1.0"
	},
	"overrides": {
		"cookie": "^0.7.2",
		"esbuild": "^0.25.0",
		"undici": "^6.23.0"
	},
	"type": "module"
}
